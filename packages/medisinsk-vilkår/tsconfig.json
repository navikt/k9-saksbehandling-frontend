{
    "compilerOptions": {
        "jsx": "react",
        "sourceMap": true,
        "module": "commonjs",
        "declaration": true,
        "skipLibCheck": true,
        "target": "esnext",
        "typeRoots": ["../../node_modules/@types"],
        "types": ["node", "jest"],
        "esModuleInterop": true,
        "allowJs": true,
        "outDir": "./build/"
    },
    "include": ["./index.ts", "src", "@types"],
    "exclude": ["node_modules", "build", "**/*.spec.ts", "**/*.spec.tsx", "dist", "./cypress.config.ts"]
}
